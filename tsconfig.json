{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "build/js",
        "target": "es5",
        "noEmitOnError": true
    },
    "files": [
        "./src/game.ts",
        "./src/graphics.ts"
    ],
    "filesGlob": [
        "./src/*.ts",
        "!./lib/*.ts"
    ]
}
