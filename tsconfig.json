{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "build/js",
        "target": "es5",
        "noEmitOnError": true
    },
    "files": [
        "./src/caches.ts",
        "./src/components.ts",
        "./src/game.ts",
        "./src/graphics.ts",
        "./src/input.ts",
        "./src/math2.ts",
        "./src/meta.ts",
        "./src/patterns.ts",
        "./src/systems.ts",
        "./src/unused.ts"
    ],
    "filesGlob": [
        "./src/*.ts",
        "!./lib/*.ts"
    ]
}
